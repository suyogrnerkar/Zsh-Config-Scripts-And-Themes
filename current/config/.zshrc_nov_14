# postgres functions
function psqlstart() { /usr/local/pgsql/bin/pg_ctl -D /usr/local/pgsql/data -l logfile start ; }
function psqlstop() { /usr/local/pgsql/bin/pg_ctl stop ; }

function ph_login_backup_db() {
    echo "Making Db Back Up to /Projects/php/PH/PrecisionHawkLogin/Database_Backups/ " &&
    cd ~/Projects/php/PH/PrecisionHawkLogin/Database_Backups &&
    mysqldump -u root -pwebonise6186 ph_login_local > ph_login_local_$(date +'%d_%b')_$1.sql ;
  }

function ph_login_restore_db() {
    echo "Restoring Db Back Up to db : ph_login_local " &&
    cd ~/Projects/php/PH/PrecisionHawkLogin/Database_Backups &&
    mysql -u root -pwebonise6186 ph_login_local < ph_login_local_$(date +'%d_%b')_$1.sql &&
    echo "Restored ! : ph_login_local ";
  }

function dumpdb() {
    echo "Dumping Db Back Up of db : $1 " &&
    mysqldump -u root -pwebonise6186 $1 > $2_$(date +'%d_%b_%I_%M_%S').sql &&
    echo "Dump created ! : $2_$(date +'%d_%b_%I_%M_%S').sql ";
  }

function resdb() {
    echo "Restoring Db Back Up to db : $1 " &&
    mysql -u root -pwebonise6186 $2 < $1 &&
    echo "Restored ! : $1 ";
  }

# view man pages in Preview
function pman() { ps=`mktemp -t manpageXXXX`.ps ; man -t $@ > "$ps" ; open "$ps" ; }

# apache tomcat functions
function tomcatup() { /usr/local/tomcat/bin/startup.sh ; }
function tomcatdown() { /usr/local/tomcat/bin/shutdown.sh ; }

# nice mount (http://catonmat.net/blog/another-ten-one-liners-from-commandlingfu-explained)
# displays mounted drive information in a nicely formatted manner
function nicemount() { (echo "DEVICE PATH TYPE FLAGS" && mount | awk '$2="";1') | column -t ; }

# myIP address
function myip() {
  ifconfig lo0 | grep 'inet ' | awk '{print "Local Loopback   => " $2 " "  $3}'
  ifconfig eth4 | grep 'inet ' |  awk '{print "Ehternet (IPv4)  => " $2 " " $3 " " $4 " " $5 " " $6}'
  ifconfig eth4 | grep 'inet6 ' |  awk '{print "Ehternet (IPv6)  => " $2 " " $3 " " $4 " " $5 " " $6}'
  # ifconfig en1 | grep 'inet ' |  awk '{print "en1 (IPv4): " $2 " " $3 " " $4 " " $5 " " $6}'
  # ifconfig en1 | grep 'inet6 ' |  awk '{print "en1 (IPv6): " $2 " " $3 " " $4 " " $5 " " $6}'
}

